[include]
  path = ~/.gitconfig_local
[core]
  excludesfile = ~/.gitignore_global
  editor = vim -c \"set fenc=utf-8\"

[alias]
  a = add
  br = branch
  c = commit
  ca = commit --amend
  cm = commit -m
  co = checkout
  f = fetch
  fe = fetch
  pl = pull
  ps = push
  rb = rebase
  rs = reset
  s = status
  st = stash
  ac = !git add . && git commit
  aca = !git add . && git commit --amend

[color]
  ui = true
  diff = true
[ghq]
  root = ~/src
