[include]
  path = ~/.gitconfig_local
[core]
  excludesfile = ~/.gitignore_global
  editor = vim -c \"set fenc=utf-8\"

[alias]
  c = commit
  cm = commit -m
  ca = commit --amend
  co = checkout
  fe = fetch
  pl = pull
  ps = push
  s = status
  br = branch
  C = !git add . && git commit

[color]
  ui = true
  diff = true
[ghq]
  root = ~/src
