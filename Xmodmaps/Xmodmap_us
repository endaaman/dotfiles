! vi: set ft=xmodmap :

clear lock
keysym Caps_Lock = Escape

remove mod1 = Alt_R
keysym Alt_R = Henkan_Mode

remove shift = Shift_R
keysym Shift_R = Muhenkan

! 47: ;
keycode 47 = colon semicolon

! remove mod4 = Super_L
! keycode 133 = Mode_switch

! remove mod1 = Alt_L
! keycode 64 = Mode_switch

! 9: Escape
! keycode 9 = grave asciitilde

keycode 25 = w W Up Up
keycode 38 = a A Left Left
keycode 39 = s S Down Down
keycode 40 = d D Right Right

keycode 43 = h H Home Home
keycode 44 = j J Next Next
keycode 45 = k K Prior Prior
keycode 46 = l L End End
