! vi: set ft=xmodmap :

clear lock
keysym Caps_Lock = Escape

remove mod1 = Alt_R
keysym Alt_R = Henkan_Mode

remove shift = Shift_R
keysym Shift_R = Muhenkan

! swap left with right for Overwatch
! keysym Control_L = Control_R

! 9: Escape
keycode 9 = grave asciitilde
! 47: ;
keycode 47 = colon semicolon

! 47: Insert
keycode 118 = Home
! 119: Delete
keycode 119 = End
