! vi: set ft=xmodmap :

clear Lock
keysym Caps_Lock = Escape

clear Shift
add Shift = Shift_L
keysym Shift_R = Mode_switch


! 11: 2
! keycode 11 = 2 at
! 16: 7
! keycode 16 = 7 grave
! 19: 0
keycode 19 = 0 plus
! 21: ^
! keycode 21 = asciicircum asciitilde
! 34: @ -> [ {
keycode 34 = bracketleft braceleft
! 35: [
keycode 35 = bracketright braceright
! 47: ;
keycode 47 = colon semicolon
! 48: :
keycode 48 = apostrophe quotedbl
! keycode 48 = plus asterisk
! 51: ]
keycode 51 = at grave
! keycode 51 = Return
! 97: \(bottonm)
! keycode 97 = plus asterisk
! 132: \(top)
keycode 132 = asterisk bar


keycode 25 = w W Up Up
keycode 38 = a A Left Left
keycode 39 = s S Down Down
keycode 40 = d D Right Right

keycode 43 = h H Left Left
keycode 44 = j J Down Down
keycode 45 = k K Up Up
keycode 46 = l L Right Right
