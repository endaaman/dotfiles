#!/bin/bash

if ! which git >/dev/null 2>&1; then
  echo 'Please install git'
  exit 1
fi

CYAN='\033[0;34m'
NC='\033[0m'

cd

mkdir -p ~/.vim/tmp
mkdir -p ~/.config/nvim
mkdir -p ~/.config/fish/functions
mkdir -p ~/.config/fontconfig
mkdir -p ~/.config/peco
mkdir -p ~/.fonts

mkdir -p ~/src
mkdir -p ~/wineprefixes

# git
ln -fs ~/dotfiles/gitconfig ~/.gitconfig
ln -fs ~/dotfiles/gitignore_global ~/.gitignore_global
touch ~/.gitconfig_local

# zsh
ln -fs ~/dotfiles/zshrc ~/.zshrc

# fish
ln -fs ~/dotfiles/config.fish ~/.config/fish/config.fish
ln -fs ~/dotfiles/fishfile ~/.config/fish/fishfile

# vim
ln -fs ~/dotfiles/vimrc ~/.vimrc
ln -fs ~/dotfiles/dein.toml ~/.vim/dein.toml

# neovim
ln -fs ~/.vim ~/.config/nvim
ln -fs ~/.vimrc ~/.config/nvim/init.vim

# x window system
ln -fs ~/dotfiles/xsession ~/.xsession
ln -fs ~/dotfiles/Xmodmap ~/.Xmodmap
ln -fs ~/dotfiles/Xdefaults ~/.Xdefaults

# fonts
ln -fs ~/dotfiles/fonts.conf ~/.config/fontconfig/fonts.conf
ln -fs ~/dotfiles/fonts ~/.fonts/

# editorconfig
ln -fs ~/dotfiles/editorconfig ~/.editorconfig

# vimperator
ln -fs ~/dotfiles/vimperatorrc ~/.vimperatorrc

# compton
ln -fs ~/dotfiles/compton.conf ~/.config/compton.conf
ln -fs ~/.config/compton.conf ~/.config/marco-compton.conf

# peco
ln -fs ~/dotfiles/peco.json ~/.config/peco/config.json


touch ~/.gitconfig_local

changed=false

nodejs=false
python=false
ruby=false
fisherman=false
zplug=false

for i in "$@" ; do
  case "$i" in
    'nodejs'    | 'node' ) nodejs=true ;;
    'python'    | 'py'   ) python=true ;;
    'ruby'      | 'rb'   ) ruby=true ;;
    'fisherman' | 'fm'   ) fisherman=true ;;
    'zplug'     | 'zp'   ) zplug=true ;;
    'keymap1' )
      echo -e "${CYAN}Activate keymap1${NC}"
      ln -sf ~/dotfiles/Xmodmap1 ~/.Xmodmap
      ;;
    'keymap2' )
      echo -e "${CYAN}Activate keymap2${NC}"
      ln -sf ~/dotfiles/Xmodmap2 ~/.Xmodmap
      ;;
    'all' )
      nodejs=true
      python=true
      ruby=true
      fisherman=true
      zplug=true
  esac
done


if $nodejs; then
  changed=true
  if [ ! -d ~/.nodebrew ]; then
    echo
    echo -e "${CYAN}Installing nodebrew${NC}"
    curl -L git.io/nodebrew | perl - setup
    echo -e "${CYAN}Installing node.js v4${NC}"
    ~/.nodebrew/nodebrew install-binary 4
  else
    echo -e "${CYAN}Updating nodebrew${NC}"
    ~/.nodebrew/nodebrew selfupdate
  fi
fi


if $python; then
  changed=true
  if [ ! -d ~/.pyenv ]; then
    echo
    echo -e "${CYAN}Installing pyenv${NC}"
    git clone https://github.com/yyuu/pyenv.git ~/.pyenv
  else
    echo -e "${CYAN}Updating pyenv${NC}"
    cd ~/.pyenv
    git pull
    cd
    echo
  fi

  if [ ! -d ~/.pyenv/plugins/pyenv-virtualenv ]; then
    echo
    echo -e "${CYAN}Installing pyenv-virtualenv${NC}"
    git clone https://github.com/yyuu/pyenv-virtualenv.git ~/.pyenv/plugins/pyenv-virtualenv
  else
    echo -e "${CYAN}Updating pyenv-virtualenv${NC}"
    cd ~/.pyenv/plugins/pyenv-virtualenv
    git pull
    cd
    echo
  fi
fi


if $ruby; then
  changed=true
  if [ ! -d ~/.rbenv ]; then
    echo
    echo -e "${CYAN}Installing rbenv${NC}"
    git clone https://github.com/rbenv/rbenv.git ~/.rbenv
  else
    echo -e "${CYAN}Updating rbenv${NC}"
    cd ~/.rbenv
    git pull
    cd
    echo
  fi

  if [ ! -d ~/.rbenv/plugins/ruby-build ]; then
    echo
    echo -e "${CYAN}Installing ruby-build${NC}"
    git clone https://github.com/rbenv/ruby-build.git ~/.rbenv/plugins/ruby-build
  else
    echo -e "${CYAN}Updating ruby-build${NC}"
    cd ~/.rbenv/plugins/ruby-build
    git pull
    cd
    echo
  fi
fi


if $zplug; then
  changed=true
  if [ ! -d ~/.zplug ]; then
    echo
    echo -e "${CYAN}Installing zplug${NC}"
    curl -sL zplug.sh/installer | zsh
  else
    echo -e "${CYAN}Updating zplug${NC}"
    cd ~/.zplug
    git pull
    cd
    echo
  fi
fi


if $fisherman; then
  changed=true
  if ! which fish >/dev/null 2>&1; then
    echo -e "${CYAN}Please install fish${NC}"
    exit 1
  fi
  if [ ! -f "~/.config/fish/functions/fisher.fish" ]; then
    echo
    echo -e "${CYAN}Installing fisherman${NC}"
    curl -Lo ~/.config/fish/functions/fisher.fish --create-dirs git.io/fisher
    echo
  fi
fi

if $changed; then
  echo -e "${CYAN}Done.${NC}"
else
  echo -e "${CYAN}Done linking.${NC}"
fi

